{
  "name": "time-sync",
  "version": "2.2.0",
  "description": "A JavaScript library to synchronize timers across an application",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:peterjuras/time-sync.git",
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "typedefs": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "build": "rm -rf build && tsc -p tsconfig.build.json && yarn run typedefs && cp -R scripts .npmignore LICENSE package.json README.md build",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "lint": "eslint '{scripts,src}/**/*.{ts,js}'",
    "test": "jest --config .jest.json",
    "test-ci": "jest --ci --runInBand --config .jest.ci.json && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/lolex": "^2.1.3",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^4.0.0",
    "jest": "^24.1.0",
    "jest-junit": "^6.3.0",
    "lolex": "^3.1.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  },
  "dependencies": {}
}
