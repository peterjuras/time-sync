{
  "name": "time-sync",
  "version": "0.0.0-development",
  "description": "A JavaScript library to synchronize timers across an application",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "url": "https://github.com/peterjuras/time-sync.git",
    "type": "git"
  },
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "build:typedefs": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "build:tsc": "babel src -d build --extensions '.ts,.tsx' --ignore '**/*.test.ts,**/*.test.tsx'",
    "build": "rm -rf build && run-p build:typedefs build:tsc && cp -R scripts .npmignore LICENSE package.json README.md build",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "lint:eslint": "eslint '{scripts,src}/**/*.{ts,js}' --max-warnings 0",
    "lint:tsc": "tsc",
    "lint:prettier": "prettier --check scripts src",
    "lint": "run-p lint:eslint lint:tsc lint:prettier",
    "test": "jest --config .jest.js",
    "test-ci": "jest --ci --config .jest.ci.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@sinonjs/fake-timers": "6.0.1",
    "@types/jest": "26.0.14",
    "@types/sinonjs__fake-timers": "6.0.1",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "babel-jest": "26.3.0",
    "coveralls": "3.1.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "jest": "26.4.2",
    "jest-circus": "26.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "typescript": "4.0.2"
  },
  "dependencies": {}
}
