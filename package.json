{
  "name": "time-sync",
  "version": "2.1.0",
  "description": "A JavaScript library to synchronize timers across an application",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:peterjuras/time-sync.git",
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "typedefs": "tsc -p tsconfig.build.json --declaration --outDir lib --emitDeclarationOnly",
    "build": "rm -rf lib && tsc -p tsconfig.build.json && yarn run typedefs && cp -R scripts .npmignore LICENSE package.json README.md lib",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "lint": "tslint -p .",
    "test": "jest --config .jest.json",
    "test-ci": "jest --ci --runInBand --config .jest.ci.json && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lolex": "^2.1.3",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "jest-junit": "^6.2.1",
    "lolex": "^3.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {}
}
