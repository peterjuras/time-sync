{
  "name": "time-sync",
  "version": "1.2.1",
  "description": "A JavaScript library to synchronize timers across an application",
  "main": "index.js",
  "repository": "git@github.com:peterjuras/time-sync.git",
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "build": "rm -rf lib && babel src -d lib --ignore test.js && cp -R scripts .npmignore LICENSE package.json README.md lib",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "lint": "eslint src/**/*.js",
    "test": "jest --config .jest.json",
    "test-ci": "jest --ci --runInBand --config .jest.ci.json && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "lolex": "^2.7.5"
  },
  "dependencies": {}
}
