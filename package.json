{
  "name": "time-sync",
  "version": "0.0.0-development",
  "description": "A JavaScript library to synchronize timers across an application",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "url": "https://github.com/peterjuras/time-sync.git",
    "type": "git"
  },
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "build:typedefs": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "build:tsc": "babel src -d build --extensions '.ts,.tsx' --ignore '**/*.test.ts,**/*.test.tsx'",
    "build": "rm -rf build && run-p build:typedefs build:tsc && cp -R scripts .npmignore LICENSE package.json README.md build",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "release": "cd build && semantic-release",
    "lint:eslint": "eslint '{scripts,src}/**/*.{ts,js}' --max-warnings 0",
    "lint:tsc": "tsc",
    "lint:prettier": "prettier-check '{scripts,src}/**/*.{ts,js}'",
    "lint": "run-p lint:eslint lint:tsc lint:prettier",
    "test": "jest --config .jest.js",
    "test-ci": "jest --ci --maxWorkers=2 --config .jest.ci.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.13",
    "@types/lolex": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.3",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lolex": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "semantic-release": "^15.13.18",
    "typescript": "^3.5.3"
  },
  "dependencies": {}
}
