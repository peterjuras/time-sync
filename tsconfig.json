{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES5", "ScriptHost", "ES2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "build",
    "paths": {
      "@sinonjs/fake-timers": ["./node_modules/@types/sinonjs__fake-timers"]
    },
    "strict": true,
    "target": "ESNext"
  }
}
